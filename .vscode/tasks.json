    "tasks": [
        {
            // 清空编译
            "type": "shell",
            "label": "rebuild",
            "command": "cd build; rm -rf *; cmake .. ; make",
            "group": {
                "kind": "build",
                "isDefault": true
            }, 
               
        },
        {
            // 增量编译 
            "type": "shell",
            "label": "build",
            "command": "export LD_LIBRARY_PATH=/home/one30/temp/openssl-1.1.1i; gcc -g -Iinclude -c main.c; gcc -g main.o ./libcrypto.so -o a.out",
            "group": {
                "kind": "build",
                "isDefault": true
            }, 
        }
    ],
    "version": "2.0.0"
 }